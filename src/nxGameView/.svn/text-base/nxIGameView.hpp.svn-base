enum nxGameViewType
{
	NX_GAMEVIEW_HUMAN,
	NX_GAMEVIEW_REMOTE,
	NX_GAMEVIEW_AI,
	NX_GAMEVIEW_RECORDER,
	NX_GAMEVIEW_OTHER
};


/*
 * =====================================================================================
 *        Class: nxIGameView
 *  Description:
 * =====================================================================================
